---
import { aboutMe, socials } from '../content/data/db';
import Social from './Social.astro';
---

<div class="@container w-full flex flex-row mt-[8%] justify-center">
	<img src="/public/images/foto.png" alt="Angel Castillo" width={200} class="max-w-full h-auto object-contain"/>
	<div class="flex justify-center mx-8 flex-col text-gray-800">
		<h1 class="text-[20px] md:text-[30px] font-bold text-gray-800 mb-4 leading-[1.2]">
			Hola soy Angel, y soy un  
			<span class="bg-black text-white px-2">desarrollador web</span> junior
		</h1>
		<p class="font-semibold text-[#797979]">{aboutMe.description}</p>
		<p class="font-semibold text-[#797979] mt-2">Cont√°ctame</p>
		<div class="mt-3 flex justify-start space-x-6 w-full">
			{socials.map((social, index) => (
				<Social name={social.name} url={social.url} icon={social.icon} />
			))}
		</div>
	</div>
</div>
