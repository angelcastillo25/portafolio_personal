---
// src/components/Navbar.astro
import { links } from '../content/data/db';
---

<nav class="bg-white p-4 fixed w-full top-0 z-50 place-content-center">
  <div class="container mx-auto flex justify-center items-center">

    <!-- Enlaces del Navbar -->
    <ul class="flex space-x-6">
      {links.map((link) => (
        <li>
          <a
            href={link.path}
            class="text-black hover:text-gray-300 transition duration-300"
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>